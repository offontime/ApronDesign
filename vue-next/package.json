{
  "name": "@apron.design/vue-next",
  "version": "0.0.2-develop",
  "description": "A Vue3.x UI Component Library",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write package/ --write src/",
    "lib": "------ build --target lib --name @apron.design/vue-next --dest lib package/index.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "publish:npm": "npm run lib && npm publish",
    "publish:web": "rsync -r ./docs/.vitepress/dist/* root@47.243.181.134:/srv/apron.design/vue-next.web",
    "publish:all": "npm run publish:npm && npm run publish:web"
  },
  "main": "lib/@apron.design/vue-next/index.common.js",
  "author": "mitkimi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/offontime/ApronDesign.git"
  },
  "homepage": "https://vue-next.apron.design",
  "license": "MIT",
  "dependencies": {
    "@code-apron/vue-next": "^1.0.4",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@icon-apron/vue-next": "^2.0.0-develop",
    "@rushstack/eslint-patch": "^1.3.3",
    "@shikijs/markdown-it": "^1.1.6",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.11.19",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitepress-demo-preview/component": "^2.3.2",
    "@vitepress-demo-preview/plugin": "^1.2.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/runtime-core": "^3.4.19",
    "@vue/shared": "^3.4.19",
    "@vue/tsconfig": "^0.5.1",
    "@vueuse/core": "^10.7.2",
    "dayjs": "^1.11.10",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "less": "^4.2.0",
    "less-loader": "^12.2.0",
    "lodash-unified": "^1.0.3",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
